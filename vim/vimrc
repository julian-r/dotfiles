"NeoBundle Scripts-----------------------------
if has('vim_starting')
  set nocompatible               " Be iMproved

  " Required:
  set runtimepath+=~/.vim/bundle/neobundle.vim/
endif

" Required:
call neobundle#begin(expand('~/.vim/bundle'))

" Let NeoBundle manage NeoBundle
" Required:
NeoBundleFetch 'Shougo/neobundle.vim'


" PLUGINS
NeoBundle 'bling/vim-airline'
NeoBundle 'scrooloose/syntastic'
NeoBundle 'scrooloose/nerdtree'
NeoBundle 'xolox/vim-misc'
NeoBundle 'xolox/vim-session'
NeoBundle 'kien/ctrlp.vim'
NeoBundle 'tpope/vim-fugitive'
NeoBundle 'jelera/vim-javascript-syntax'
NeoBundle 'lybrown/vim-pasm'

" Required:
call neobundle#end()
filetype plugin indent on    " required

""""""""""""""""""""""""""""""""""""""""""""
" airline settings
" want to have it also without splits
set laststatus=2
" donÂ´t want to see mode indicator
set noshowmode

let g:airline_theme             = 'powerlineish'
let g:airline_powerline_fonts=1

let g:airline#extensions#tabline#enabled = 1

" session settings
:let g:session_autosave = 'no'
nmap <leader>ss :SaveSession 
nmap <leader>sl :LoadSession


" hidden buffers are okay
set hidden

syntax on
filetype plugin indent on

set expandtab
set textwidth=79
set tabstop=8
set softtabstop=4
set shiftwidth=4
set autoindent

" Pythonmode settings
let g:pymode_lint = 0

set encoding=utf-8

set colorcolumn=79

" Shortcut to rapidly toggle `set list`
nmap <leader>l :set list!

" Shortcut to edit vimrc
nmap <leader>c :e $MYVIMRC
" Source the vimrc file after saving it
if has("autocmd")
  autocmd bufwritepost $MYVIMRC source $MYVIMRC
endif

" switch between buffers	
map <C-Down> :bn <CR>
map <C-Up> :bN<CR>


" OminComplete settings
autocmd FileType css set omnifunc=csscomplete#CompleteCSS
inoremap <expr> <C-Space> pumvisible() \|\| &omnifunc == '' ?
            \ "\<lt>C-n>" :
            \ "\<lt>C-x>\<lt>C-o><c-r>=pumvisible() ?" .
            \ "\"\\<lt>c-n>\\<lt>c-p>\\<lt>c-n>\" :" .
            \ "\" \\<lt>bs>\\<lt>C-n>\"\<CR>"
imap <C-@> <C-Space>


" CtrlP settings
" Ignore userdata directory
 

set wildignore+=*/userdata/*


" enable modline
set modeline 

